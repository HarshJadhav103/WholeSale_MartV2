@model Product

<div class="card shodow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="ProductName" disabled class="form-control border-0 shadow" />
                    <label asp-for="ProductName" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <textarea asp-for="Description" disabled class="form-control border-0 shadow"></textarea>
                    <label asp-for="Description" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ProductNumber" disabled class="form-control border-0 shadow" />
                    <label asp-for="ProductNumber" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="VedorName" disabled class="form-control border-0 shadow" />
                    <label asp-for="VedorName" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="OriginalPrice" disabled class="form-control border-0 shadow" />
                    <label asp-for="OriginalPrice" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price" disabled class="form-control border-0 shadow" />
                    <label asp-for="Price" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price10" disabled class="form-control border-0 shadow" />
                    <label asp-for="Price10" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price25" disabled class="form-control border-0 shadow" />
                    <label asp-for="Price25" class="ms-2"></label>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-6">
                        <button type="submit" class="btn btn-danger form-control">Delete Product</button>
                    </div>
                    <div class="col-6 col-md-6">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

